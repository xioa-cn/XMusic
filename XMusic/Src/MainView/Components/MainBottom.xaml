<UserControl
    x:Class="XMusic.Src.MainView.Components.MainBottom"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:XMusic.Src.MainView.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:XMusic.Src.MainView.ViewModel"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Margin="10"
            FontSize="25"
            Foreground="Black"
            Text="音乐世界" />
        <Button
            Width="100"
            Margin="20,10"
            HorizontalAlignment="Right"
            Command="{Binding ShowContentCommand}"
            Content="播放"
            Style="{StaticResource BottomContentBtn}" />
    </Grid>
</UserControl>
